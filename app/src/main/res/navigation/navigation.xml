<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.combyne.casestudy.view.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_createMovieFragment"
            app:destination="@id/createMovieFragment" />
        <action
            android:id="@+id/action_homeFragment_to_movieListFragment"
            app:destination="@id/movieListFragment" />
    </fragment>
    <fragment
        android:id="@+id/createMovieFragment"
        android:name="com.combyne.casestudy.view.CreateMovieFragment"
        android:label="CreateMovieFragment" />
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.combyne.casestudy.view.MovieListFragment"
        android:label="MovieListFragment" />
</navigation>